<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocketDecisionMaker.App.MainPage"
             Padding="0">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0"
                EndPoint="0,1">
            <GradientStop Color="#4facfe"
                    Offset="0.0"/>
            <GradientStop Color="#00f2fe"
                    Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>


    <StackLayout Spacing="70">
        <VerticalStackLayout Spacing="10"
                             Padding="10,50,10,10">
            <Label Text="Pocket Decision Maker"
                   FontSize="30"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"/>
            <Label Text="Make decisions the fun way !!!"
                   FontSize="Small"
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>
        <Button Text="Get Started"
                FontAttributes="Bold"
                BackgroundColor="#FF3106DE"
                CornerRadius="20"
                Padding="10"
                WidthRequest="150"
                />
    </StackLayout>



</ContentPage>
